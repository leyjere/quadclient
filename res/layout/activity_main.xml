<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.clientapp.MainActivity" >

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start"
        android:layout_alignBottom="@+id/start"
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp"
        android:text="Stop" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Start" />

    <TextView
        android:id="@+id/thr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/start"
        android:layout_marginTop="56dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/rudd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/thr"
        android:layout_alignBottom="@+id/thr"
        android:layout_alignRight="@+id/stop"
        android:text="TextView" />

    <TextView
        android:id="@+id/elev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/thr"
        android:layout_below="@+id/thr"
        android:layout_marginTop="77dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/ail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/elev"
        android:layout_alignBottom="@+id/elev"
        android:layout_alignLeft="@+id/rudd"
        android:text="TextView" />

</RelativeLayout>